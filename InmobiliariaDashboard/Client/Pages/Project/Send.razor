@page "/project/send/{id}"
@inherits SendBase

<h1>Enviar proyecto</h1>

@if (Saving)
{
    <div class="alert alert-info mt-4">
        <div class="spinner-border ml-auto text-primary" role="status" aria-hidden="true"></div>
        <string>Enviando...</string>
    </div>
}

<EditForm Model="@Record" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <input type="hidden" class="form-control" @bind="Record.ProjectId" />

    <div class="form-row">
        <FormSelectRecord @bind-Value="Record.ContactId" Records="Contacts" Title="Contacto"></FormSelectRecord>
    </div>

    <div class="form-row">
        <div class="col form-group">
            <label>Asunto</label>
            <input type="text" class="form-control" @bind="Record.Subject" />
        </div>
    </div>

    <div class="form-row">
        <div class="col form-group">
            <label>Mensaje</label>
            <textarea type="text" class="form-control" @bind="Record.Message"></textarea>
        </div>
    </div>

    <button type="submit" class="btn btn-success" disabled="@Saving">Enviar</button>
    <button type="button" class="btn btn-secondary" @onclick="OnCancelClick">Cancelar</button>
</EditForm>