@page "/project/list"
@using InmobiliariaDashboard.Shared
@using InmobiliariaDashboard.Shared.Enumerations
@inherits ListBase

<h1>Proyectos</h1>

<div class="text-right">
    <a href="project/add" class="btn btn-primary"><span class="oi oi-plus"></span> Agregar proyecto</a>
    <a href="project/history" class="btn btn-secondary"><span class="oi oi-file"></span> Historial</a>
</div>

@if (Records == null)
{
    <p>
        <em>Cargando...</em>
    </p>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Empresa</th>
                <th>Tipo</th>
                <th>Sub-tipo</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var record in Records)
            {
                <tr>
                    <td>@record.Name</td>
                    <td>@record.EnterpriseName</td>
                    <td>@(BaseEnumeration.FromCode<ProjectTypeEnum>(record.ProjectType).DisplayName)</td>
                    <td>@record.ProjectSubTypeName</td>
                    <td>@record.StartDate</td>
                    <td>@(record.EndDate?.ToString("yyyy MMMM dd") ?? "-")</td>
                    <td>
                        <a href="project/edit/@record.Id">
                            <span class="oi oi-pencil"></span>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}