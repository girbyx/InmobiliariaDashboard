@page "/project/edit/{id}"
@inherits EditBase

<h1>Editar proyecto</h1>

<div class="text-right">
    <button type="button" class="btn btn-outline-danger" @onclick="OnDeleteClick"><span class="oi oi-x"></span> Borrar</button>
    <button type="button" class="btn btn-outline-warning" @onclick="OnArchiveClick"><span class="oi oi-tags"></span> Archivar</button>
</div>

<EditForm Model="@Record" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <input type="hidden" class="form-control" @bind="Record.Id" />

    <div class="form-row">
        <div class="col form-group">
            <label>Proyecto</label>
            <input type="text" class="form-control" @bind="Record.Name" />
        </div>
        <div class="col form-group">
            <label>Codigo</label>
            <input type="text" class="form-control" @bind="Record.Code" />
        </div>
        <FormSelectRecord @bind-Value="Record.EnterpriseId" Records="Record.Enterprises" Title="Empresas"></FormSelectRecord>
    </div>

    <div class="form-row">
        <div class="col form-group">
            <label>Fecha de inicio</label>
            <input type="date" class="form-control" @bind="Record.StartDate" />
        </div>
        <div class="col form-group">
            <label>Fecha de fin</label>
            <input type="date" class="form-control" @bind="Record.EndDate" />
        </div>
        <div class="text-center col-2 form-group">
            <label>Vendido</label>
            <input type="checkbox" class="form-control" @bind="Record.Sold" />
        </div>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <button type="button" class="btn btn-secondary" @onclick="OnCancelClick">Cancelar</button>
</EditForm>