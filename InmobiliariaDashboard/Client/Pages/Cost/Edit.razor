@page "/cost/edit/{id}"
@inherits EditBase

<h1>Editar costo</h1>

<div class="text-right">
    <button type="button" class="btn btn-outline-danger" @onclick="OnDeleteClick"><span class="oi oi-x"></span> Borrar</button>
</div>

<EditForm Model="@Record" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <input type="hidden" class="form-control" @bind="Record.Id" />

    <div class="form-row">
        <div class="col form-group">
            <label>Valor</label>
            <input type="number" class="form-control" @bind="Record.Value" />
        </div>
        <FormSelectRecord @bind-Value="Record.CostTypeId" Records="Record.CostTypes" Title="Tipos de costos"></FormSelectRecord>
    </div>

    <div class="form-row">
        <div class="col form-group">
            <label>Comision</label>
            <input type="number" class="form-control" @bind="Record.Commission" />
        </div>
        <FormSelectEnum @bind-Value="Record.CommissionType" Records="CommissionTypes" Title="Tipos de comision"></FormSelectEnum>
    </div>

    <div class="form-row">
        <FormSelectRecord OnChangeCallback="OnProjectChange" @bind-Value="Record.ProjectId" Records="Record.Projects" Title="Proyectos"></FormSelectRecord>
        <FormSelectRecord @bind-Value="Record.MonetaryAgentId" Records="Record.MonetaryAgents" Title="Agentes monetarios"></FormSelectRecord>
    </div>

    <div class="form-row">
        <div class="col form-group">
            <label>Descripcion</label>
            <input type="text" class="form-control" @bind="Record.Description" />
        </div>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <button type="button" class="btn btn-secondary" @onclick="OnCancelClick">Cancelar</button>
</EditForm>