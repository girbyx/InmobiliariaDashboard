@page "/gain/add"
@inherits AddBase

<h1>Agregar ganancia</h1>

@if (Saving)
{
    <div class="alert alert-info mt-4">
        <div class="spinner-border ml-auto text-primary" role="status" aria-hidden="true"></div>
        <string>Guardando...</string>
    </div>
}

<EditForm Model="@Record" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-row">
        <div class="col form-group">
            <label>Valor</label>
            <input type="number" class="form-control" @bind="Record.Value" />
        </div>
        <FormSelectRecord @bind-Value="Record.GainTypeId" Records="Record.GainTypes" Title="Tipos"></FormSelectRecord>
        <div class="col form-group">
            <label>Cantidad</label>
            <input type="number" class="form-control" @bind="Record.Quantity" />
        </div>
    </div>

    <div class="form-row">
        <div class="col form-group">
            <label>Fecha</label>
            <input type="date" class="form-control" @bind="Record.Date" />
        </div>
        <FormSelectRecord OnChangeCallback="OnEnterpriseChange" @bind-Value="Record.PeopleId" Records="Record.Peoples" Title="Entidades"></FormSelectRecord>
        <FormSelectRecord @bind-Value="Record.ProjectId" Records="Record.Projects" Title="Proyectos" WithEmptyOption="true"></FormSelectRecord>
        <FormSelectRecord @bind-Value="Record.BankAccountId" Records="Record.MonetaryAgents" Title="Cuentas"></FormSelectRecord>
    </div>

    <div class="form-row">
        <div class="col form-group">
            <label>Descripcion</label>
            <textarea rows="5" class="form-control" @bind="Record.Description"></textarea>
        </div>
    </div>

    <div class="form-row">
        <div class="col form-group">
            <label>Adjuntos</label>
            <InputFile OnChange="HandleFileSelection" class="custom-select" multiple />
        </div>
    </div>
    
    <button type="submit" class="btn btn-success" disabled="@Saving">Guardar</button>
    <button type="button" class="btn btn-secondary" @onclick="OnCancelClick">Cancelar</button>
</EditForm>