@page "/gain/list"
@inherits ListBase

<h1>Ingresos</h1>

<div class="text-right">
    <a href="gain/add" class="btn btn-primary"><span class="oi oi-plus"></span> Agregar ingreso</a>
</div>

@if (Records == null)
{
    <p>
        <em>Cargando...</em>
    </p>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Proyecto</th>
                <th>Agente monetario</th>
                <th>Valor</th>
                <th>Cantidad</th>
                <th>Sub total</th>
                <th>Creado en</th>
                <th>Actualizado en</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var record in Records)
            {
                <tr>
                    <td>@record.ProjectName</td>
                    <td>@record.MonetaryAgentName</td>
                    <td>$@record.Value</td>
                    <td>@record.Quantity</td>
                    <td>$@record.SubTotal</td>
                    <td>@record.CreatedOn.ToString("yyyy MMMM dd")</td>
                    <td>@(record.UpdatedOn?.ToString("yyyy MMMM dd") ?? "-")</td>
                    <td>
                        <a href="gain/edit/@record.Id">
                            <span class="oi oi-pencil"></span>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}