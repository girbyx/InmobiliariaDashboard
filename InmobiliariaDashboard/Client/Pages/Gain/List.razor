@page "/gain/list"
@inherits ListBase

<h1>Ingresos</h1>

<div class="text-right">
    <a href="gain/add" class="btn btn-primary"><span class="oi oi-plus"></span> Agregar ingreso</a>
</div>

@if (Records == null)
{
    <p>
        <em>Cargando...</em>
    </p>
}
else
{
    <div class="text-left">
        <input placeholder="Buscar..." type="text" @oninput="FilterRecords" />
    </div>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Persona</th>
                <th>Proyecto</th>
                <th>Cuenta</th>
                <th>Tipo</th>
                <th>Valor</th>
                <th>Cantidad</th>
                <th>Sub total</th>
                <th>Fecha</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var record in Records)
            {
                <tr>
                    <td>@record.PeopleName</td>
                    <td>@(record.ProjectName ?? "-")</td>
                    <td>@record.BankAccountName</td>
                    <td>@record.GainTypeName</td>
                    <td>@record.Value.ToString("C")</td>
                    <td>@record.Quantity.ToString("N")</td>
                    <td>@record.SubTotal.ToString("C")</td>
                    <td>@record.Date.ToString("D")</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-outline-primary" href="gain/edit/@record.Id">
                            <span class="oi oi-pencil"></span>
                        </a>
                    </td>
                    <td class="text-center">
                        <button type="button" class="btn btn-sm btn-outline-danger" @onclick="() => OnDeleteClick(record.Id)"><span class="oi oi-x"></span></button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}