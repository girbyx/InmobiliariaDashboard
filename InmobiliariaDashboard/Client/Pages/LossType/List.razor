@page "/losstype/list"
@inherits ListBase

<h1>Cost types</h1>

<div class="text-right">
    <a href="losstype/add" class="btn btn-primary"><span class="oi oi-plus"></span> Add loss type</a>
</div>

@if (Records == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Loss Type</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var record in Records)
        {
            <tr>
                <td>@record.Name</td>
                <td>@record.Description</td>
                <td><a href="losstype/edit/@record.Id"><span class="oi oi-pencil"></span></a></td>
            </tr>
        }
        </tbody>
    </table>
}