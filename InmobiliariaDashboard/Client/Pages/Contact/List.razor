@page "/contact/list"
@inherits ListBase

<h1>Contactos</h1>

<div class="text-right">
    <a href="contact/add" class="btn btn-primary"><span class="oi oi-plus"></span> Agregar proyecto</a>
</div>

@if (Records == null)
{
    <p>
        <em>Cargando...</em>
    </p>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Celular</th>
                <th>Direccion</th>
                <th>Empresa</th>
                <th>Prospecto</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var record in Records)
            {
                if (record.Prospect)
                {
                    <tr class="table-info">
                        <td>@record.Name</td>
                        <td>@record.Cellphone</td>
                        <td>@record.Address</td>
                        <td>@record.EnterpriseName</td>
                        <td>Si</td>
                        <td>
                            <a href="contact/edit/@record.Id">
                                <span class="oi oi-pencil"></span>
                            </a>
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>@record.Name</td>
                        <td>@record.Cellphone</td>
                        <td>@record.Address</td>
                        <td>@record.EnterpriseName</td>
                        <td>No</td>
                        <td>
                            <a href="contact/edit/@record.Id">
                                <span class="oi oi-pencil"></span>
                            </a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
}