@page "/contact/list"
@inherits ListBase

<h1>Contactos</h1>

<div class="text-right">
    <a href="contact/add" class="btn btn-primary"><span class="oi oi-plus"></span> Agregar contacto</a>
</div>

@if (Records == null)
{
    <p>
        <em>Cargando...</em>
    </p>
}
else
{
    <div class="text-left">
        <input placeholder="Buscar..." type="text" @oninput="FilterRecords" />
    </div>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Celular</th>
                <th>Direccion</th>
                <th>Persona</th>
                <th>Prospecto</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var record in Records)
            {
                <tr class="@(record.Prospect ? "table-info" : "")">
                    <td>@record.Name</td>
                    <td>@record.Email</td>
                    <td>@record.Cellphone</td>
                    <td>@record.Address</td>
                    <td>@record.EnterpriseName</td>
                    <td>@(record.Prospect ? "Si" : "No")</td>
                    <td>
                        <a href="contact/edit/@record.Id">
                            <span class="oi oi-pencil"></span>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}