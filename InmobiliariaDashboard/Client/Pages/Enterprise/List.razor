@page "/enterprise/list"
@inherits ListBase

<h1>Entidades</h1>

<div class="text-right">
    <a href="enterprise/add" class="btn btn-primary"><span class="oi oi-plus"></span> Agregar entidad</a>
</div>

@if (Records == null)
{
    <p>
        <em>Cargando...</em>
    </p>
}
else
{
    <div class="text-left">
        <input placeholder="Buscar..." type="text" @oninput="FilterRecords" />
    </div>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Codigo</th>
                <th>Entidad</th>
                <th>Email</th>
                <th>Celular</th>
                <th>Direccion</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var record in Records)
            {
                <tr>
                    <td>@record.Code</td>
                    <td>@record.Name</td>
                    <td>@record.Email</td>
                    <td>@record.Cellphone</td>
                    <td>@record.Address</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-outline-primary" href="enterprise/edit/@record.Id">
                            <span class="oi oi-pencil"></span>
                        </a>
                    </td>
                    <td class="text-center">
                        <button type="button" class="btn btn-sm btn-outline-danger" @onclick="() => OnDeleteClick(record.Id)"><span class="oi oi-x"></span></button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}