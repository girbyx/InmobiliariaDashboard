@inherits CurrentRemindersBase

@if (Records != null && Records.Any())
{
    @foreach (var record in Records)
    {
        <div class="text-center alert alert-info mt-4">
            <p>Fecha: @record.NextOccurrence.ToString("f")</p>
            <p>Titulo: @record.Name</p>
            <p>Descripcion: @record.Description</p>
        </div>
    }
}